<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--第一层阴影-->

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#d1d1d1" />
        </shape>
    </item>


    <item android:top="2px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#b3b3b3" />
        </shape>
    </item>


    <item android:top="4px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#d1d1d1" />
        </shape>
    </item>




    <item android:top="6px">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#eeedf2" />
        </shape>
    </item>

    <item android:top="6px"
        android:left="2px"
        android:right="2px"
        >
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#e7e6eb" />
        </shape>
    </item>




    <!--第二层前景-->
    <item android:top="6px"
           android:right="4px"
           android:left="4px"
        >
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>