<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.spay.presenter.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/addFriend_toolBar"
            layout="@layout/layout_toolbar2"
            bind:presenter="@{presenter}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f0eff5" />


        <LinearLayout
            android:id="@+id/addFriend_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_search"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/search" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f0eff5"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_mySmNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qrcode"
                android:onClick="@{()->presenter.step2Fragment(&quot;visitingcard&quot;)}"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0eff5" />

    </LinearLayout>
</layout>