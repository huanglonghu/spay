<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.spay.presenter.Presenter" />

        <variable
            name="fragment"
            type="com.example.spay.ui.fragment.bindproduct.BatchSetupFragment" />

        <variable
            name="isConfig1"
            type="boolean" />

        <variable
            name="isConfig2"
            type="boolean" />

        <variable
            name="isConfig3"
            type="boolean" />

        <variable
            name="isConfig4"
            type="boolean" />

        <variable
            name="isConfig5"
            type="boolean" />

        <import type="android.view.View" />


    </data>

    <com.southernbox.springscrollview.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider2_a"
            android:orientation="vertical"
            android:showDividers="middle">


            <include
                android:id="@+id/batch_setup_toolbar"
                layout="@layout/layout_toolbar2"
                bind:presenter="@{presenter}" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="礼品设置"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/switch_giftConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{(view,isConfig)->fragment.switchConfig(view,isConfig1)}" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg8"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="@{isConfig1?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="礼品与货道关联"
                        android:textSize="17sp" />


                    <LinearLayout
                        android:id="@+id/selectPresent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/present"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_et4"
                            android:gravity="center_vertical|right"
                            android:hint="请选择礼品"
                            android:padding="5dp"
                            android:textColorHint="@color/theme_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/back3" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="商品售卖价格"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/switch_priceConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{(view,isConfig)->fragment.switchConfig(view,isConfig2)}" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg8"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:visibility="@{isConfig2?View.VISIBLE:View.GONE}">

                    <com.example.spay.ui.view.customview.LastInputEditText
                        android:id="@+id/sellPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_et4"
                        android:gravity="center_vertical|right"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:paddingRight="40dp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="元/个"
                        android:textColor="#000" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="货道(游戏)单价"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/switch_gameConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{(view,isConfig)->fragment.switchConfig(view,isConfig3)}" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg8"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:visibility="@{isConfig3?View.VISIBLE:View.GONE}">

                    <com.example.spay.ui.view.customview.LastInputEditText
                        android:id="@+id/gamePrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_et4"
                        android:gravity="center_vertical|right"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:paddingRight="40dp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="元/局"
                        android:textColor="#000" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="货道商品获得概率"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/switch_glConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{(view,isConfig)->fragment.switchConfig(view,isConfig4)}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg8"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:visibility="@{isConfig4?View.VISIBLE:View.GONE}">

                    <EditText
                        android:id="@+id/probablity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_et4"
                        android:gravity="center_vertical|right"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingRight="40dp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="局/个" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="现有库存"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/switch_numConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:onCheckedChanged="@{(view,isConfig)->fragment.switchConfig(view,isConfig5)}" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/bg8"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="@{isConfig5?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="数量"
                        android:textSize="15sp" />


                    <com.example.spay.ui.view.customview.AmountView
                        android:id="@+id/amountView"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bg9"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="货道设置"
                android:textColor="#000"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/hdSelect"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="货道选择"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="请选择"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/back3" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg9">

                <Button
                    android:id="@+id/save"
                    style="@style/btn1"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="保存" />
            </RelativeLayout>


        </LinearLayout>
    </com.southernbox.springscrollview.SpringScrollView>
</layout>