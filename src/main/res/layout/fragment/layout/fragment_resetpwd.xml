<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.example.spay.presenter.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/exit"
            android:onClick="exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:text="找回密码"
            android:textSize="58pt"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_a2"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105pt"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手机号/邮箱"
                    android:textColor="#000"
                    android:textSize="27pt" />

                <EditText
                    android:id="@+id/account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入密码或者邮箱"
                    android:paddingLeft="20pt"
                    android:textSize="27pt" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105pt"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="验证码"
                    android:textColor="#000"
                    android:textSize="27pt" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/yzm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:paddingLeft="20pt"
                        android:textSize="27pt" />


                    <TextView
                        android:id="@+id/getYzm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tv"
                        android:gravity="center"
                        android:hint="获取验证码"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="26pt" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105pt"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="密码"
                    android:textColor="#000"
                    android:textSize="27pt" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="number"
                    android:paddingLeft="20pt"
                    android:textSize="27pt" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/complete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_wxdl"
                android:gravity="center"
                android:text="找回密码"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>


    </LinearLayout>
</layout>