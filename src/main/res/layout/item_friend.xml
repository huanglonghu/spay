<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

        <variable
            name="character"
            type="String" />

        <variable
            name="type"
            type="int" />

        <variable
            name="friend"
            type="com.example.godcode.greendao.entity.Friend" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@{character}"
            android:textSize="12sp"
            android:visibility="@{character==null?View.GONE:View.VISIBLE}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:onClick="@{()->presenter.clickItem(type,friend)}"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/friend_photo"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="@{friend.userName}"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
</layout>