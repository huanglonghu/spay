<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

        <variable
            name="mainPresent"
            type="int" />

        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.deatailFragment.RevenueConfigFragment"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/revenueconfig_toolbar"
            layout="@layout/layout_toolbar2"
            bind:presenter="@{presenter}" />

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/main_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/main_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@{String.valueOf(mainPresent)}"
                android:textColor="#000" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg3"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="分成商家" />

            <ListView
                android:id="@+id/lv_revenueconfig"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/addRevenue"
                style="@style/btn2"
                android:text="添加" />

            <Button
                android:id="@+id/commit_revenue"
                style="@style/btn1"
                android:layout_marginTop="20dp"
                android:text="确定"
                />

        </LinearLayout>

    </LinearLayout>
</layout>