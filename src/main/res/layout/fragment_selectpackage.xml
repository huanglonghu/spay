<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

        <variable
            name="isFreePlay"
            type="boolean"/>
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/select_package_toolbar"
            layout="@layout/layout_toolbar2"
            bind:presenter="@{presenter}"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/c1">

            <ImageView
                android:id="@+id/productPicture"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#000" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_packageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="@drawable/divider3"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/freePlay"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_wxdl"
                android:text="免费试玩"
                android:gravity="center"
                android:textColor="#fff"
                android:visibility="@{isFreePlay?View.VISIBLE:View.GONE}"
                />

        </LinearLayout>


    </LinearLayout>
</layout>